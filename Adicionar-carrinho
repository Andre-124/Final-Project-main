<?php
session_start();
include('ligacao.php');

if ($_SERVER['REQUEST_METHOD'] == 'POST' && isset($_POST['adicionar_ao_carrinho'])) {
    $produto = [
        'codigo' => $_POST['codigo_produto'],
        'nome' => $_POST['nome_produto'],
        'preco' => $_POST['preco_produto'],
        'tamanho' => $_POST['tamanho_produto']
    ];
    adicionarAoCarrinho($produto);
}
?>